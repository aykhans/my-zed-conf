// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"assistant": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-4o"
		},
		"version": "2"
	},
	"telemetry": {
		"metrics": false
	},
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"theme": {
		"mode": "system",
		"light": "JetBrains New Dark",
		"dark": "I love my eyes"
	},
	"autosave": {
		"after_delay": {
			"milliseconds": 100
		}
	},
	"features": {
		"copilot": true,
		"inline_completion_provider": "copilot"
	},
	// "hard_tabs": true,
	"cursor_shape": "bar",
	"cursor_blink": true,
	"terminal": {
		"blinking": "on"
	},
	"scroll_sensitivity": 0.6,
	"show_whitespaces": "all",
	"tab_size": 4
}
